<div class="cam-header bg-dark">
    <div class="row">
        <div class="col-4">
            <span class="h4">{{name}}</span>
        </div>
        <div class="col-8 cam-action-icons">
            <span class="cam-pause">
                <i class="fa fa-lg fa-pause-circle"></i>
            </span>
            <span class="cam-save">
                <i class="fa fa-lg fa-image"></i>
            </span>
            <span class="cam-fullscreen">
                <i class="fa fa-lg fa-arrows-alt"></i>
            </span>
        </div>
    </div>
</div>
<div class="cam-stream">
    <div class="cam-loading-icon">
        <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
    </div>
    <img class="cam-play" src="images/camera-play.png">
</div>
